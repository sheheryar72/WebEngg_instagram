                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <hr style="background-color: white;" />
                                @for (int i = 0; i < Convert.ToInt32(ViewData["FollowerCount"].ToString()); i++)
